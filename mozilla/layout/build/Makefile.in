ifdef MOZ_SVG_RENDERER_CAIRO
SHARED_LIBRARY_LIBS += \
                $(DIST)/lib/$(LIB_PREFIX)gksvgrenderercairo_s.$(LIB_SUFFIX) \
                $(NULL)
