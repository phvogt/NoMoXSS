DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= layout
LIBRARY_NAME	= gkbase_s
REQUIRES	= xpcom \
		  string \
		  dom \
		  content \
		  gfx \
		  widget \
		  view \
		  locale \
		  webshell \
		  necko \
		  uconv \
		  pref \
		  uriloader \
		  docshell \
		  imglib2 \
		  $(NULL)

CPPSRCS		= \
		nsAutoCopy.cpp \
		nsCaret.cpp \
		nsCopySupport.cpp \
		nsFrameList.cpp \
		nsFrameTraversal.cpp \
		nsFrameUtil.cpp \
		nsGalleyContext.cpp \
		nsImageLoader.cpp \
		nsIntervalSet.cpp \
		nsLayoutDebugger.cpp \
		nsLayoutHistoryState.cpp \
		nsLayoutUtils.cpp \
		nsPresContext.cpp \
		nsPresState.cpp \
		nsPrintContext.cpp \
		nsPrintPreviewContext.cpp \
		nsSpaceManager.cpp \
		nsStyleChangeList.cpp \
		$(NULL)

ifdef IBMBIDI
CPPSRCS		+= \
		nsBidiPresUtils.cpp \
		nsBidi.cpp \
		$(NULL)
endif                

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES	= \
		-I$(topsrcdir)/content/events/src \
		-I$(srcdir)/../../html/base/src \
		-I$(srcdir)/../../html/style/src \
		-I$(srcdir)/../../xul/base/src \
		-I$(srcdir)/../../xul/content/src \
		$(NULL)

DEFINES += -D_IMPL_NS_LAYOUT
