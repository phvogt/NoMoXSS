REQUIRES	= xpcom \
		  gfx \
		  $(NULL)

include $(DEPTH)/config/autoconf.mk

CPPSRCS		= \
		TestSpaceManager.cpp \
		$(NULL)

SIMPLE_PROGRAMS	= $(CPPSRCS:.cpp=$(BIN_SUFFIX))

LOCAL_INCLUDES	= \
		-I$(srcdir)/../src \
		$(NULL)

EXTRA_DSO_LIBS	= gkbase_s gkgfx

LIBS		+= \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_JS_LIBS) \
		$(TK_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES += -D_IMPL_NS_LAYOUT
