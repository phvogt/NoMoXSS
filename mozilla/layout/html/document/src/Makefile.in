DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DIRS = xbl-marquee

MODULE		= layout
LIBRARY_NAME	= gkhtmldoc_s
REQUIRES	= xpcom \
		  string \
		  content \
		  gfx \
		  widget \
		  dom \
		  necko \
		  locale \
		  view \
		  js \
		  webshell \
		  docshell \
		  caps \
		  pref \
		  uriloader \
		  xpconnect \
		  accessibility \
		  webbrwsr \
		  $(NULL)

CPPSRCS		= \
		nsFrameFrame.cpp \
		nsFrameSetFrame.cpp \
		$(NULL)

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES	= \
		-I$(srcdir)/../../base/src \
		-I$(srcdir)/../../../base/src \
		-I$(srcdir)/../../content/src \
		$(NULL)

_FILES	= \
	html.css \
	quirk.css \
	viewsource.css \
	arrow.gif \
	arrowd.gif \
	$(NULL)

ifeq ($(OS_ARCH), OS2)
PLATFORM_DIR = os2
else
ifeq ($(MOZ_WIDGET_TOOLKIT), cocoa)
PLATFORM_DIR = mac
else
PLATFORM_DIR = win
endif
endif

PLATFORM_FORMS_CSS	= $(srcdir)/$(PLATFORM_DIR)/platform-forms.css

GARBAGE		+= $(addprefix $(DIST)/bin/res/,$(_FILES)) $(DIST)/bin/res/ua.css

libs:: $(_FILES) $(srcdir)/forms.css  $(PLATFORM_FORMS_CSS)
	$(INSTALL) $^ $(DIST)/bin/res
	rm -f $(DIST)/bin/res/ua.css
	cp $(srcdir)/ua.css $(DIST)/bin/res

install:: $(_FILES) $(srcdir)/forms.css ua.css $(PLATFORM_FORMS_CSS)
	$(SYSINSTALL) $(IFLAGS1) $^ $(DESTDIR)$(mozappdir)/res

DEFINES += -D_IMPL_NS_LAYOUT
