# And now for something completely different...
# Divide the default build into tiers. 
# Tiers must be defined on module boundaries 
#
default: $(SUBMAKEFILES)
	$(RM) -rf $(DIST)/sdk
	$(MAKE) -C config export
	$(MAKE) nspr
	$(MAKE) ldap
	$(MAKE) tier_0
	$(MAKE) tier_1
