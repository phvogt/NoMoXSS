		  exthandler \
		  htmlparser \
		  view \
		  pref \
		  locale \
		  webbrwsr \
		  xpconnect \
		  widget \
		  shistory \
		  intl \
		  plugin \
		  webshell \
		  chardet \
		  uconv \
		  xuldoc \
		  find \
		  nkcache \
		  composer \
		  commandhandler \
		  editor \
		  history \
