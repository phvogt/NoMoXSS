DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= gfx
LIBRARY_NAME	= gfx_photon
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsGfxPhModule

PACKAGE_FILE = photon.pkg

REQUIRES	= xpcom \
		  string \
		  widget \
		  view \
		  util \
		  dom \
		  pref \
		  uconv \
		  unicharutil \
		  windowwatcher \
		  locale \
		  intl \
		  $(NULL)

CPPSRCS		= \
		nsDeviceContextPh.cpp \
		nsDeviceContextSpecFactoryP.cpp \
		nsDeviceContextSpecPh.cpp \
		nsDrawingSurfacePh.cpp \
		nsFontMetricsPh.cpp \
		nsGfxFactoryPh.cpp \
		nsImagePh.cpp \
		nsRegionPh.cpp \
		nsGraphicsStatePh.cpp \
		nsRenderingContextPh.cpp \
		nsScreenPh.cpp \
		nsScreenManagerPh.cpp \
		nsPrintOptionsPh.cpp \
		$(NULL)

include $(topsrcdir)/config/rules.mk


EXTRA_DSO_LDOPTS += $(TK_LIBS)
CXXFLAGS	+= $(TK_CFLAGS)
CFLAGS		+= $(TK_CFLAGS)

EXTRA_DSO_LDOPTS += $(MOZ_COMPONENT_LIBS) \
		-lgkgfx \
		-lgfxshared_s \
		$(NULL)

DEFINES		+= -D_IMPL_NS_GFXNONXP

INCLUDES	+= \
		-I$(srcdir)/. \
		-I$(srcdir)/.. \
		-I$(srcdir)/../shared \
		$(NULL)



