DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= layout_debug
LIBRARY_NAME	= gkdebug
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
MODULE_NAME	= nsLayoutDebugModule

REQUIRES	= xpcom \
		  string \
		  windowwatcher \
		  docshell \
		  dom \
		  gfx \
		  content \
		  necko \
		  layout \
		  widget \
		  locale \
		  view \
		  pref \
		  appshell \
		  $(NULL)

XPIDLSRCS	= \
		nsILayoutRegressionTester.idl \
		nsILayoutDebuggingTools.idl \
		$(NULL)

EXPORTS		= \
		nsLayoutDebugCIID.h \
		$(NULL)

CPPSRCS		= \
		nsDebugFactory.cpp \
		nsLayoutDebugCLH.cpp \
		nsLayoutDebuggingTools.cpp \
		nsRegressionTester.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIRS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

libs::

clobber::
				rm -f $(DIST)\lib\library
