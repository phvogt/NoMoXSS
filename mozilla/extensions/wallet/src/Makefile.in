DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= wallet
LIBRARY_NAME	= wallet
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsWalletModule
GRE_MODULE	= 1

PACKAGE_FILE = wallet.pkg

REQUIRES	= xpcom \
		  xpcom_obsolete \
		  string \
		  necko \
		  dom \
		  gfx \
		  layout \
		  content \
		  widget \
		  uriloader \
		  pref \
		  webshell \
		  docshell \
		  intl \
		  unicharutil \
		  windowwatcher \
		  $(NULL)

CPPSRCS		= \
		nsWalletFactory.cpp \
		nsWalletService.cpp \
		wallet.cpp \
		singsign.cpp \
		nsPassword.cpp \
		nsPasswordManager.cpp \
		$(NULL)

DEFAULTS_FILES	= \
		$(srcdir)/DistinguishedSchema.tbl \
		$(srcdir)/FieldSchema.tbl \
		$(srcdir)/VcardSchema.tbl \
		$(srcdir)/SchemaConcat.tbl \
		$(srcdir)/SchemaStrings.tbl \
		$(srcdir)/PositionalSchema.tbl \
		$(srcdir)/StateSchema.tbl \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIRS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_XPCOM_OBSOLETE_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

libs::
	$(INSTALL) $(DEFAULTS_FILES) $(DIST)/bin/defaults/wallet

install::
	$(SYSINSTALL) $(IFLAGS1) $(DEFAULTS_FILES) $(DESTDIR)$(mozappdir)/defaults/wallet
