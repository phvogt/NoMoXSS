DEPTH=../../../..
topsrcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = inspector
LIBRARY_NAME = inspector
# Do not set EXPORT_LIBRARY as we do not want inspector in the static libs list
#EXPORT_LIBRARY = 1
FORCE_SHARED_LIB = 1
ifneq ($(OS_ARCH),WINNT)
SHORT_LIBNAME = inspectr
endif

PACKAGE_FILE = inspector.pkg

REQUIRES	= xpcom \
		  string \
		  gfx \
		  layout \
		  content \
		  dom \
		  widget \
		  locale \
		  necko \
		  $(NULL)
IS_COMPONENT = 1

CPPSRCS 	= \
		nsInspectorModule.cpp \
		$(NULL)

LOCAL_INCLUDES = -I$(srcdir)/../../base/src

EXTRA_DSO_LIBS = gkgfx

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/$(LIB_PREFIX)inspector_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS += \
	$(LIBS_DIR) \
	$(EXTRA_DSO_LIBS) \
	$(MOZ_UNICHARUTIL_LIBS) \
	$(MOZ_COMPONENT_LIBS) \
	$(NULL)

include $(topsrcdir)/config/rules.mk
