DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= caps
LIBRARY_NAME	= caps
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsSecurityManagerModule
GRE_MODULE	= 1

PACKAGE_FILE = caps.pkg

REQUIRES	= xpcom \
		  string \
		  pref \
		  js \
		  dom \
		  xpconnect \
		  necko \
		  jar \
		  widget \
		  plugin \
		  intl \
		  docshell \
		  windowwatcher \
		  content \
		  $(NULL)

CPPSRCS		= \
		nsPrincipal.cpp \
		nsSystemPrincipal.cpp \
		nsJSPrincipals.cpp \
		nsScriptSecurityManager.cpp \
		nsSecurityManagerFactory.cpp \
		$(NULL)

ifdef XPC_IDISPATCH_SUPPORT
DEFINES += -DXPC_IDISPATCH_SUPPORT
endif

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(ZLIB_LIBS) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

INCLUDES	+= -I$(srcdir)/../include

