DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= widget
LIBRARY_NAME	= gkwidget
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
RESFILE		= widget.res
MODULE_NAME	= nsWidgetModule

PACKAGE_FILE = widget_win.pkg

REQUIRES	= xpcom \
		  string \
		  necko \
		  uconv \
		  gfx \
		  dom \
		  timer \
		  accessibility \
		  $(NULL)

CPPSRCS		= nsWinWidgetFactory.cpp

EXTRA_DSO_LIBS	= gkgfx

LOCAL_INCLUDES	= \
		-I$(srcdir) \
		-I$(srcdir)/../xpwidgets \
		-I$(srcdir)/../windows \
		$(NULL)

OS_LIBS		+= $(call EXPAND_LIBNAME, comctl32 comdlg32 uuid ole32 \
		shell32 oleaut32 gdi32 imm32 )

ifndef GNU_CC
OS_LIBS		+= $(call EXPAND_LIBNAME, urlmon)
endif

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/$(LIB_PREFIX)widget_windows.$(LIB_SUFFIX) \
		$(DIST)/lib/$(LIB_PREFIX)xpwidgets_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_WIDGET -DMOZ_UNICODE -DMOZ_AIMM



