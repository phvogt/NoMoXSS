DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(srcdir)/../objs.mk

MODULE		= jar
LIBRARY_NAME	= jar$(VERSION_NUMBER)_s
REQUIRES	= xpcom \
		  string \
		  caps \
		  $(ZLIB_REQUIRES) \
		  $(NULL)

#DEP_XPIDLSRCS	= $(MODULES_LIBJAR_XPIDLSRCS)
#EXPORTS		= $(MODULES_LIBJAR_LEXPORTS)

CPPSRCS		= $(MODULES_STANDALONE_LCPPSRCS)

FORCE_STATIC_LIB = 1

ifneq ($(OS_ARCH),WINNT)
SHARED_LIBRARY_LIBS = $(DIST)/lib/$(LIB_PREFIX)mozz_s.$(LIB_SUFFIX)
endif

GARBAGE		+= $(MODULES_STANDALONE_LCPPSRCS) $(wildcard *.$(OBJ_SUFFIX))

ifeq ($(OS_ARCH),WINNT)
USE_NON_MT_LIBS=1
GARBAGE		+= $(addprefix $(srcdir)/,$(MODULES_STANDALONE_LCPPSRCS))
endif

ifeq ($(OS_ARCH),OS2)
USE_STATIC_LIBS=1
endif

SRCS_IN_OBJDIR	= 1

include $(topsrcdir)/config/rules.mk

DEFINES += -DSTANDALONE

LOCAL_INCLUDES	= -I$(srcdir)/..

export:: $(MODULES_STANDALONE_CPPSRCS)
	$(INSTALL) $^ .
