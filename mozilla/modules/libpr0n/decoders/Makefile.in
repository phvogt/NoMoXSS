DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DIRS		= $(MOZ_IMG_DECODERS)

ifneq (,$(findstring icon,$(MOZ_IMG_DECODERS)))
ifeq ($(OS_ARCH),WINNT)
DIRS		:= icon/win $(DIRS)
endif
ifeq ($(OS_ARCH),OS2)
DIRS		:= icon/os2 $(DIRS)
endif
ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
DIRS		:= icon/mac $(DIRS)
endif
endif # icon

include $(topsrcdir)/config/rules.mk

