DEPTH		= ..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= xpcom
GRE_MODULE	= 1

DIRS		= \
		MoreFiles \
		typelib \
		string \
		glue \
		base \
		ds \
		io \
		components \
		threads \
		reflect \
		proxy \
		build \
		tools \
		$(NULL)

ifeq ($(OS_ARCH),WINNT)
ifdef MOZ_DEBUG
DIRS		+= windbgdlg
endif
endif

ifdef ENABLE_TESTS
DIRS		+= \
	tests \
	sample \
	typelib/xpt/tests \
	reflect/xptinfo/tests \
	reflect/xptcall/tests \
	proxy/tests
endif

# xpcom-config.h is generated by configure
SDK_HEADERS	= xpcom-config.h

include $(topsrcdir)/config/rules.mk

