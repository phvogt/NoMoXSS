DEPTH		= ../..
topsrcdir	= @top_srcdir@
VPATH		= @srcdir@
srcdir		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= jsdebug
LIBRARY_NAME	= jsd
# Do not set EXPORT_LIBRARY as we do not want jsd in the static libs list
#EXPORT_LIBRARY	= 1
FORCE_SHARED_LIB= 1
ifeq ($(OS_ARCH),WINNT)
LIBRARY_NAME	= jsd$(MOZ_BITS)$(VERSION_NUMBER)
endif

# REQUIRES	= java js
REQUIRES	= js

ifndef JSD_STANDALONE
REQUIRES += \
		  string \
		  xpcom \
		  xpconnect \
		  widget \
		  dom \
		  $(NULL)

PACKAGE_FILE = jsd.pkg
endif

EXTRA_DSO_LDOPTS += \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NULL)
EXPORTS		= jsdebug.h

ifdef JS_THREADSAFE
DEFINES         += -DJS_THREADSAFE
endif

CSRCS		= \
		  jsdebug.c \
		  jsd_atom.c \
		  jsd_high.c \
		  jsd_hook.c \
		  jsd_lock.c \
		  jsd_obj.c \
		  jsd_scpt.c \
		  jsd_stak.c \
		  jsd_step.c \
		  jsd_text.c \
		  jsd_val.c \
		  $(NULL)

ifdef JSD_STANDALONE
DIRS	+= jsdb
else
DIRS	+= idl
CPPSRCS	 = jsd_xpc.cpp
IS_COMPONENT = 1
endif

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DEXPORT_JSD_API
