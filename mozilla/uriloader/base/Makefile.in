DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= uriloader
LIBRARY_NAME	= uriloaderbase_s
GRE_MODULE	= 1

REQUIRES	= xpcom \
		  string \
		  necko \
		  dom \
		  exthandler \
		  js \
		  docshell \
		  gfx \
		  layout \
		  content \
		  widget \
		  caps \
		  intl \
		  webshell \
		  xpconnect \
		  mimetype \
		  $(NULL)

CPPSRCS = 							\
				nsURILoader.cpp 		\
				nsDocLoader.cpp			\
				$(NULL)
SDK_XPIDLSRCS = 						\
				nsIURIContentListener.idl 	\
				$(NULL)
XPIDLSRCS = 							\
				nsIContentHandler.idl 		\
				nsIURILoader.idl	 	\
				nsCURILoader.idl		\
				nsIDownload.idl   \
				nsIDocumentLoader.idl		\
				nsIWebProgress.idl 	\
				nsIWebProgressListener.idl 	\
				$(NULL)
EXPORTS = 							\
				nsURILoader.h	 		\
				nsDocLoader.h			\
				$(NULL)

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

