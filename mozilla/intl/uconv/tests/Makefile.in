DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

REQUIRES	= \
		string \
		xpcom \
		uconv \
		locale \
		$(NULL)

CPPSRCS		= \
		TestUConv.cpp \
		nsconv.cpp \
		plattest.cpp \
		$(NULL)

ifeq ($(OS_ARCH),WINNT)
CPPSRCS		+= convperf.cpp
endif

SIMPLE_PROGRAMS	= $(CPPSRCS:.cpp=$(BIN_SUFFIX))

include $(topsrcdir)/config/rules.mk

INCLUDES	+= \
		-I$(srcdir)/../ucvlatin \
		-I$(srcdir)/../ucvja \
		-I$(srcdir)/../util \
		$(NULL)

LIBS		+= \
		$(LIBS_DIR) \
		$(XPCOM_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

# needed for mac linux
ifeq ($(OS_ARCH),Linux)
ifneq ($(OS_RELEASE),1.2)
OS_LIBS		+= /usr/lib/libdl.so
endif
endif

