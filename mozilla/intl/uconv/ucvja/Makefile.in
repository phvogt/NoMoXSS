EXPORTS		= \
		nsUCVJACID.h \
		nsUCVJA2CID.h \
		$(NULL)

#SHARED_LIBRARY_LIBS = $(DIST)/lib/$(LIB_PREFIX)ucvutil_s.$(LIB_SUFFIX)

LOCAL_INCLUDES	= -I$(srcdir)/../util


EXTRA_DSO_LDOPTS += $(MOZ_COMPONENT_LIBS)

