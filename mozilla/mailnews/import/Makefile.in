endif

ifeq ($(OS_ARCH),WINNT)
DIRS		+= eudora
ifneq ($(_MSC_VER),1100)
ifndef GNU_CC
DIRS		+= oexpress outlook
endif
endif
endif

ifdef MOZ_STATIC_MAIL_BUILD
DIRS += build
endif

include $(topsrcdir)/config/rules.mk
