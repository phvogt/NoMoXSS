		nsMsgAttachmentHandler.cpp \
		nsMsgPrompts.cpp \
		nsMsgComposeService.cpp \
		nsMsgComposeParams.cpp \
		nsMsgComposeProgressParams.cpp \
		nsMsgComposeContentHandler.cpp \
		nsMsgCompose.cpp \
		nsMsgQuote.cpp \
		nsMsgRecipientArray.cpp \
		nsURLFetcher.cpp \
		nsSmtpServer.cpp \
		nsSmtpDataSource.cpp \
		nsSmtpDelegateFactory.cpp \
		$(NULL)

EXPORTS		= \
		nsMsgCompCID.h \
		nsSmtpUrl.h \
