DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msgcompose
LIBRARY_NAME	= msgcompose_s
META_COMPONENT = mail
REQUIRES	= xpcom \
		  xpcom_obsolete \
		  string \
		  dom \
		  js \
		  editor \
		  uriloader \
		  msgbase \
		  mailnews \
		  necko \
		  mime \
		  pref \
		  intl \
		  uconv \
		  locale \
		  unicharutil \
		  content \
		  msgbaseutil \
		  msgdb \
		  rdf \
		  appshell \
		  msgimap \
		  msgnews \
		  docshell \
		  webshell \
		  addrbook \
		  widget \
		  htmlparser \
		  txmgr \
		  caps \
		  exthandler \
		  nkcache \
		  mimetype \
		  windowwatcher \
		  $(NULL)

#ifdef XP_WIN32
      REQUIRES += gfx
#endif

