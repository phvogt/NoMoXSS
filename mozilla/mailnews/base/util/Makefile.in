		nsMsgTxn.h \
		nsMsgI18N.h \
		nsMsgUtf7Utils.h \
		nsAdapterEnumerator.h \
		$(NULL)

ifndef MOZ_STATIC_MAIL_BUILD

EXTRA_DSO_LDOPTS = \
