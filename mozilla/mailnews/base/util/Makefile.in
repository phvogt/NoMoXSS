		  xpcom_obsolete \
		  string \
		  msgbase \
		  rdf \
		  necko \
		  msgdb \
		  intl \
		  mork \
		  mailnews \
		  locale \
		  pref \
		  rdfutil \
		  mime \
		  caps \
		  msgcompose \
          addrbook \
		  docshell \
		  webshell \
		  uriloader \
		  appshell \
		  msgimap \
		  msglocal \
		  msgnews \
		  txmgr \
		  uconv \
		  unicharutil \
		  nkcache \
		  mimetype \
		  windowwatcher \
		  $(NULL)

CPPSRCS		= \
		nsMsgGroupRecord.cpp \
		nsMsgLineBuffer.cpp \
		nsMsgDBFolder.cpp \
		nsUint8Array.cpp \
		nsUInt32Array.cpp \
		nsMsgKeySet.cpp \
		nsMsgKeyArray.cpp \
