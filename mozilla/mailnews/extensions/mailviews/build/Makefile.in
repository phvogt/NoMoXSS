DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= mailview
LIBRARY_NAME	= mailview
META_COMPONENT = mail
EXPORT_LIBRARY = 1
SHORT_LIBNAME	= mailview
IS_COMPONENT	= 1
MODULE_NAME	= nsMsgMailViewModule
REQUIRES	= xpcom \
		  string \
		  msgbase \
		  mailnews \
		  necko \
		  msgbaseutil \
          	  msgdb \
          	  mime \
		  $(NULL)

ifeq ($(USE_SHORT_LIBNAME),1)
EXTRA_DSO_LIBS = msgbsutl
else
EXTRA_DSO_LIBS = msgbaseutil
endif

CPPSRCS		= nsMsgMailViewsFactory.cpp

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/$(LIB_PREFIX)mailview_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_XPCOM_OBSOLETE_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

