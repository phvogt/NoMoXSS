DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= smime
LIBRARY_NAME	= smimestb
META_COMPONENT = mail
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsSMIMEModule

PACKAGE_FILE = smimetb.pkg

REQUIRES	= xpcom \
		  string \
		  mime \
		  msgbase \
		  pref \
		  necko \
		  uconv \
		  intl \
		  $(NULL)

ifeq ($(OS_ARCH),WINNT)
MAPFILE		= smimestb.map
DEFFILE		= $(srcdir)/smime.def
endif

EXTRA_DSO_LIBS	= mimecthglue_s

CPPSRCS		= \
		nsSMIMEStub.cpp \
		nsSMIMEStubFactory.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES = -I$(srcdir)/../glue
