DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

PROGRAM		= setup$(BIN_SUFFIX)
RESFILE		= setup.res
REQUIRES	= \
		setuprsc \
		xpnet \
		$(NULL)

EXTRA_DSO_LIBS	= \
		mozregsa_s \
		jar50_s \
		mozz_s \
		xpnet_s \
		$(NULL)

USE_NON_MT_LIBS = 1
USE_STATIC_LIBS = 1

CSRCS		= \
		setup.c \
		extra.c \
		ifuncns.c \
		logging.c \
		xpi.c \
		dialogs.c


CPPSRCS		= \
		nsEscape.cpp \
		nsINIParser.cpp \
		xpnetHook.cpp \
		$(NULL)

LIBS		= $(EXTRA_DSO_LIBS)

LOCAL_INCLUDES	= -I$(srcdir)/../uninstall

NO_DIST_INSTALL	= 1


include $(topsrcdir)/config/rules.mk

LDFLAGS += -Zlinker /PM:PM

libs:: $(PROGRAM)
	$(INSTALL) $(PROGRAM) $(DIST)/install

install:: $(PROGRAM)
	$(INSTALL) $(PROGRAM) $(DESTDIR)$(mozappdir)/install

clean clobber realclean clobber_all::
	$(RM) $(DIST)/install/$(PROGRAM)
