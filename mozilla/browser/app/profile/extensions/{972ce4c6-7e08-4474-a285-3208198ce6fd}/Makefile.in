VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/rules.mk

FILES := \
	install.rdf \
	$(NULL)

libs::
	$(PERL) $(MOZILLA_DIR)/config/preprocessor.pl $(DEFINES) $(ACDEFINES) $(srcdir)/install.rdf.in > install.rdf
