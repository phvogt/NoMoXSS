			    </vbox>
			    <vbox class="month-column-center-day-class">
				   <label class="month-view-header-days" id="month-view-header-day-7"/>
			    </vbox>
			</row>

			<row id="month-week-1-row" flex="1"  >
			    <vbox class="month-leftcol-box-class" flex="1" id="month-week-1-left-box">
